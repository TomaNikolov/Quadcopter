extends ../shared/layout
block main-content
    div.row
        div.col-md-12
            a(class="btn btn-primary pull-right" href="/register")
                | New User
    table(class="table table-striped table-hover ")
        thead
            tr
                th User name
                th Files
                th Delete
         tbody
            each user in users
                tr
                    td=user.username
                    td
                        a(href="#")
                            i(class="glyphicon glyphicon-folder-open")
                    td
                        a(href="#")
                            i(class="glyphicon glyphicon-trash")

    include ../shared/paginate